{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src/",
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/**/*.d.ts",
        "./jspm_packages/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}